<% if(locals.lastVisit){ %>
<div class="alert alert-danger" role="alert">
  Your visited last on: <%= locals.lastVisit %>
</div>
<%} %>

<h1 class="header">Products</h1>
<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>desc</th>
      <th>price</th>
      <th>image</th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>
    <% products.forEach((product)=>{ %>
    <tr>
      <td><%=product.id %></td>
      <td><%=product.name %></td>
      <td><%=product.desc %></td>
      <td><%=product.price %></td>
      <td><img src="<%=product.imageUrl %>" alt="" /></td>
      <td>
        <a href="/update-product/<%=product.id %>" class="btn btn-warning"
          >Update</a
        >
        <button
          onclick="deleteProduct('<%=product.id %>')"
          class="btn btn-danger"
        >
          Delete
        </button>
      </td>
    </tr>
    <% }) %>
  </tbody>
</table>
