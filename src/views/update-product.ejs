<h1 class="header">Update product</h1>
<% if(errorMessage){  %>
  <div class="alert alert-danger" role="alert">
    <%= errorMessage %>
  </div>
<%} %>
<form action="/update-product/" method="post">
    <input type="hidden" class="form-control" id="id" name="id" value='<%=product.id %>' </" />

  <div class="form-group">
    <label for="name">Product Name</label>
    <input type="text" class="form-control" id="name" name="name" value='<%=product.name %>'</" />
  </div>
  <div class="form-group">
    <label for="desc">Description</label>
    <input type="text" class="form-control" id="desc" name="desc" value='<%=product.desc %>'</" />
  </div>

  <div class="form-group">
    <label for="price">Price</label>
    <input type="text" class="form-control" id="price" name="price" value='<%=product.price %>'</" />
  </div>
  <div class="form-group">
    <label for="imageUrl">Image</label>
    <input type="text" class="form-control" id="imageUrl" name="imageUrl" value='<%=product.imageUrl %>'</"  />
  </div>

  <button type="submit" class="btn btn-primary">Update</button>
</form>
